{% extends "layout.html.twig" %}

{% block title %}JSB | Zoekresultaten{% endblock %}
{% block pagetitle %}<span class="font-green-sharp">Johann Sebastian Bach</span><small> Zoekresultaten</small>{% endblock pagetitle %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block content %}
    {{ include("flash.html.twig") }}

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                {% for row in rows %}
                    <tr>
                        <td colspan="3"><strong>Resultaat {{ loop.index }}</strong></td>
                    </tr>
                    {% for type, ary in row %}
                        {% if type == 'opus' %}
                            <tr>
                                <td>Opus: </td>
                                {#<td>{{ ary.opus }}</td>#}
                                <td><a href="{{ path('bach_parts', {'opus': ary.id}) }}" data-target="#stack1" data-toggle="modal">{{ ary.opus }}</a></td>
                                <td>{{ ary.opus_title|raw }}</td>
                            </tr>
                        {% elseif type == 'part' %}
                            <tr>
                                <td>Part ({{ ary.partnumber }}): </td>
                                <td>{{ ary.parttype|raw }}</td>
                                <td>{{ ary.part_title|raw }}</td>
                            </tr>
                        {% elseif type == 'track' %}
                            <tr>
                                <td></td>
                                <td>Dirigent: </td>
                                <td>{{ ary.conductor|raw }}</td>
                            </tr>
                            <tr>
                               <td></td>
                               <td>Ensemble: </td>
                               <td>{{ ary.ensemble|raw }}</td>
                            </tr>
                            <tr>
                               <td></td>
                               <td>Uitvoerenden:</td>
                               <td>{{ ary.performer|raw }}</td>
                           </tr>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% include  'list_modals.html.twig'%}
    <!-- END PAGE CONTENT INNER -->
{% endblock content%}

