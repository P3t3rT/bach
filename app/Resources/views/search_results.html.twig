{% extends "layout.html.twig" %}

{% block title %}JSB | zoekresultaten{% endblock %}
{% block pagetitle %}<span class="font-green-sharp">Johann Sebastian Bach</span><small> Zoek Resultaten</small>{% endblock pagetitle %}

{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}

{% block content %}
    {{ include("flash.html.twig") }}

    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                {% for row in rows %}
                    <tr>
                        <td colspan="3"><h5><strong>Resultaat {{ loop.index }}</strong></h5></td>
                    </tr>
                    {% for type, arr in row %}
                        {% if type == 'opus' %}
                            <tr>
                                <td>Opus: </td>
                                <td>{{ arr.opus }}</td>
                                <td>{{ arr.opus_title|raw }}</td>
                            </tr>
                        {% elseif type == 'part' %}
                            <tr>
                                <td>Part: </td>
                                <td>{{ arr.parttype }}</td>
                                <td>{{ arr.part_title|raw }}</td>
                            </tr>
                        {% elseif type == 'track' %}
                            <tr>
                                <td>Track: </td>
                                <td>Dirigent: </td>
                                <td>{{ arr.conductor|raw }}</td>
                            </tr>
                            <tr>
                               <td></td>
                               <td>Ensemble: </td>
                               <td>{{ arr.ensemble|raw }}</td>
                            </tr>
                            <tr>
                               <td></td>
                               <td>Uitvoerenden:</td>
                               <td>{{ arr.performer|raw }}</td>
                           </tr>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <!-- END PAGE CONTENT INNER -->
{% endblock content%}

{#<!-- BEGIN JAVASCRIPTS -->#}
{% block javascripts %}
    {{ parent() }}
{% endblock javascripts%}

{% block jquery %}
    {{ parent() }}
	<script>
      jQuery(document).ready(function() {
         Metronic.init(); // init metronic core components
         Layout.init(); // init current layout
      });
   </script>
{% endblock jquery %}
{#<!-- END JAVASCRIPTS -->#}
